<h1 class="show_title"><%= @post.title %></h1>
<p class="date">Submitted <%= time_ago_in_words(@post.created_at) %> Ago.</p>
<% if @post.user==current_user %>
<p><%= link_to 'Edit Post', edit_post_path ,class:'button'%> </p>
<% end %>
<br>
<p class="show_body"><%= @post.body %></p>

<div class="comments">
  <h2> <%= @post.comments.count %> Comments</h2>
  <%= render @post.comments %>
  
  <div class="comments_form">
   <h3>Add a Comment:</h3>
    <%= render 'comments/form' %>
  </div>
</div>

<%= link_to 'Back', root_path,class: 'button' %> 
